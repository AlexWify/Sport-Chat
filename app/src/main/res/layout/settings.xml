<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A74EC6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A74EC6"
            android:layout_marginLeft="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <RadioButton
                android:id="@+id/radioButtonRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Борьба"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButtonGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Волейбол"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButtonY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Баскетбол"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButtonBl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Футбол"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButtonWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хоккей"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButtonBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Шахматы"
                android:textColor="@color/black" />
        </RadioGroup>


        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#6F0AEA"
            android:fontFamily="casual"
            android:text="@string/back"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>